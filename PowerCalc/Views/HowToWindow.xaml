<Window x:Class="TAlex.PowerCalc.Views.HowToWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Source={StaticResource viewModelLocator}, Path=HowToViewModel, Mode=OneTime}"
        Title="How To..." Height="400" MinHeight="200" Width="600" MinWidth="400"
        ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        
        <Grid Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <TextBlock FontSize="16" Text="Define a variable..." />
            <Separator VerticalAlignment="Bottom" />
            <DocumentPageView Grid.Row="1" />
        </Grid>
        
        <CheckBox Grid.Row="1" Content="Show on startup" IsChecked="{Binding ShowOnStartup}" VerticalAlignment="Center" />
        
        <Button Grid.Row="1" Width="80" HorizontalAlignment="Right" Margin="0,0,90,0" Content="Previous" Command="{Binding PreviousCommand}" />
        <Button Grid.Row="1" Width="80" HorizontalAlignment="Right" Content="Next" Command="{Binding NextCommand}" />
    </Grid>
</Window>
