<FlowDocument
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:talex="http://schemas.talex-soft.com/2010/xaml/presentation"
        Tag="Worksheet: input matrix..."
        FontFamily="Segoe UI">

    <Paragraph FontSize="17" FontWeight="Bold" Margin="0">
        Steps:
    </Paragraph>
    <List MarkerStyle="Decimal" Padding="25,0" Margin="0">
        <ListItem>
            <Paragraph>
                Click <Span FontWeight="Bold">Right Mouse</Span> button on input field to show context menu
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>
                Select "<Span FontWeight="Bold">Insert/edit matrix...</Span>" menu item
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>
                Choose size of the matrix and fill matrix cells
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>Press <Span FontWeight="Bold">Insert</Span> button
            </Paragraph>
        </ListItem>
    </List>

    <Paragraph>
        <talex:ImageEx Stretch="None" IsThemed="True" Source="/Resources/Documents/HowTo/Images/input_matrix.Blue.png">
            <talex:ImageEx.LayoutTransform>
                <ScaleTransform ScaleX="0.6" ScaleY="0.6" />
            </talex:ImageEx.LayoutTransform>
        </talex:ImageEx>
    </Paragraph>
</FlowDocument>