<FlowDocument
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:talex="http://schemas.talex-soft.com/2010/xaml/presentation"
        Tag="Plot 2D: zoom plot..."
        FontFamily="Segoe UI">

    <Paragraph FontSize="17" FontWeight="Bold" Margin="0">
        Steps:
    </Paragraph>
    <List MarkerStyle="Decimal" Padding="25,0" Margin="0">
        <ListItem>
            <Paragraph>Hover mouse pointer under plot 2D
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>
                Scroll up mouse wheel to <Span FontWeight="Bold">Zoom In</Span>
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>
                Scroll down mouse wheel to <Span FontWeight="Bold">Zoom Out</Span>
            </Paragraph>
        </ListItem>
    </List>
</FlowDocument>