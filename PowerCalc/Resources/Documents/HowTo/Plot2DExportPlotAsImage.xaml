<FlowDocument
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:talex="http://schemas.talex-soft.com/2010/xaml/presentation"
        Tag="Plot 2D: export plot as image..."
        FontFamily="Segoe UI">

    <Paragraph FontSize="17" FontWeight="Bold" Margin="0">
        Steps:
    </Paragraph>
    <List MarkerStyle="Decimal" Padding="25,0" Margin="0">
        <ListItem>
            <Paragraph>
                Press <Span FontWeight="Bold">Left Mouse</Span> button to show context menu
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>
                Select "<Span FontWeight="Bold">Save image as...</Span>" menu item and click on it
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>
                In "<Span FontWeight="Bold">Save As</Span>" dialog type the name of the image and click <Span FontWeight="Bold">Save</Span> button.
            </Paragraph>
        </ListItem>
    </List>

    <Paragraph>
        <talex:ImageEx Stretch="None" IsThemed="True" Source="/Resources/Documents/HowTo/Images/plot2d_export_plot.Blue.png">
            <talex:ImageEx.LayoutTransform>
                <ScaleTransform ScaleX="0.6" ScaleY="0.6" />
            </talex:ImageEx.LayoutTransform>
        </talex:ImageEx>
    </Paragraph>
</FlowDocument>