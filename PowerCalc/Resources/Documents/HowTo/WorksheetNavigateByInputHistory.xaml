<FlowDocument
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TAlex.PowerCalc.Controls;assembly=PowerCalc"
        Tag="Worksheet: navigate by input history..."
        FontFamily="Segoe UI">

    <Paragraph FontSize="17" FontWeight="Bold" Margin="0">
        Steps:
    </Paragraph>
    <List MarkerStyle="Decimal" Padding="25,0" Margin="0">
        <ListItem>
            <Paragraph>
                Evaluate several expressions
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>
                Press <Span FontWeight="Bold">Up</Span> button to navigate up by input history
            </Paragraph>
        </ListItem>
        <ListItem>
            <Paragraph>
                Press <Span FontWeight="Bold">Down</Span> button to navigate down by input history
            </Paragraph>
        </ListItem>
    </List>

    <Paragraph>
        <controls:ThemedImage Stretch="None" Source="/Resources/Documents/HowTo/Images/navigate_by_input_history.Grayscale.png" />
    </Paragraph>
</FlowDocument>